<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#424242"
android:clipChildren="false">

    <com.ankur.lahacks.utils.SquareFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipChildren="false">

        <com.gigamole.infinitecycleviewpager.VerticalInfiniteCycleViewPager
            android:id="@+id/vicvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icvp_center_page_scale_offset="0dp"
            app:icvp_max_page_scale="0.8"
            app:icvp_medium_scaled="true"
            app:icvp_min_page_scale="0.6"
            app:icvp_min_page_scale_offset="0dp"
            app:icvp_interpolator="@android:anim/accelerate_decelerate_interpolator"
            app:icvp_scroll_duration="250"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@android:color/white"/>

    </com.ankur.lahacks.utils.SquareFrameLayout>

</FrameLayout>